{
  "manifest_version": 3,
  "name": "Stash: Save Text & Images",
  "version": "1.0.0",
  "description": "Effortlessly capture and organize content into your personal library",
  "permissions": ["contextMenus", "storage", "scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["http://192.168.1.3:5173/*"],
      "js": ["content-sync.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:5173/*",
      "http://192.168.1.3:5173/*",
      "http://192.168.1.3:5173/*",
      "https://your-production-website.com/*"
    ]
  },
  "action": {
    "default_title": "Stash",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
