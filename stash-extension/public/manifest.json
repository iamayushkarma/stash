{
  "manifest_version": 3,
  "name": "Stash - Text & Screenshot Saver",
  "version": "1.0.0",
  "description": "Easily save selected text and screenshots to your personal stash.",
  "permissions": ["contextMenus", "storage", "scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["http://192.168.1.3:5173/*"],
      "js": ["content-sync.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Stash"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.ico",
    "128": "icons/icon128.png"
  }
}
